<% form_for(word) do |f|%>
<%= f.error_messages %>
<% f.fields_for :fragment, word.fragment do |af| %>
  <%= af.label :start %>
  <%= af.text_field :start %>
  <%= af.label :stop %>
  <%= af.text_field :stop %>
  <%= af.label :asset_id %>
  <%= af.text_field :asset_id %>
<% end %>
<%= f.submit "Submit" %>
<%= button_to_function "cancel", "$('#word_form').html('')" %>
<%= button_to_function "remove", "removeWord(\'#{word.id}\')" %>
<% end %>
