<h1>Listing fragments</h1>

<table>
  <tr>
    <th>Sentence</th>
    <th>Start</th>
    <th>End</th>
    <th>Audio</th>
  </tr>

<% @fragments.each do |fragment| %>
  <tr>
    <td><%=h fragment.sentence.content %></td>
    <td><%=h fragment.start %></td>
    <td><%=h fragment.end %></td>
    <td><%=h @audio.filename %></td>
    <td><%= link_to 'Show', audio_fragment_path(@audio.id,fragment) %></td>
    <td><%= link_to 'Edit', edit_audio_fragment_path(@audio,fragment) %></td>
    <td><%= link_to 'Destroy', audio_fragment_path(@audio,fragment), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fragment', new_audio_fragment_path(@audio) %>
