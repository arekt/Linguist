<%= javascript_include_tag ['jquery-1.3.2','application'] %>
<%= javascript_tag "var dsentence_html=\'#{escape_javascript render :partial => 'dsentence_form', :collection => [Dsentence.new] }\';" %>

<% form_for @dialog do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>  
    <%= f.label :source_id %><br />
    <%= f.collection_select :source_id, Source.all, :id, :display_name %> <%= link_to "New source", new_source_path %>
  </p>
  <p> Sentences:
  <table id='dsentences'>
    <tr>
    <th><%= f.label :no %></th>
    <th><%= f.label :person %></th>
    <th><%= f.label :content %></th>
    <tr>
      <%= render :partial => 'dsentence_form', :collection => @dsentences %>
  </table>
      <%= button_to_function "New sentence","insert_dsentence(dsentence_html)" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
