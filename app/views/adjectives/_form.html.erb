<%= javascript_include_tag ['jquery-1.3.2','application'] %>
<%= javascript_tag "var translation_html=\'#{escape_javascript render :partial => 'translation_form', :collection => [Translation.new] }\';" %>

<% form_for @adjective do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :itype_true, "-i adjective" %> <%= f.radio_button :itype, true %><br>
    <%= f.label :itype_false, "-na adjective" %> <%= f.radio_button :itype, false %>
  </p>
  <p>
  <div class='translations'>
    Translations:<br>
    <%= button_to_function "New translation","insert_translation(translation_html)" %>
    <%= render :partial => 'translation_form', :collection => @adjective.translations %>
  </div>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
