<div id='search' style='float:right;'>
<% form_tag(sentences_path, :method => 'GET') do %>
<%= text_field_tag :content %>
<%= select :category, "", options_for_select(@unit.sentence_categories), {:include_blank => 'All sentences' } %>
<%= collection_select "", :asset_id, @unit.assets, :id, :file_name, {:include_blank => 'All assets'} %>
<%= submit_tag('Search') %>
<% end %>
</div>
<div class='clear'></div>


