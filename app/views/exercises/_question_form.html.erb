<% fields_for 'exercise[questions][]', question_form, :index => '' do |f| %>
<div class='single_question'>

  <p>
    <%= f.label :content, 'Question' %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :correct_answer, 'Answer' %><br>
    <%= f.collection_select :correct_answer, @unit.sentences, :id, :content %><%= button_to_function "Remove question","remove_question(this)" %>
  </p>
</div>
<% end %>
